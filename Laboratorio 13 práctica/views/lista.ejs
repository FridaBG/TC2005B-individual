<%- include('includes/head.ejs') %>

<h1 class="title">Perros registrados</h1>

<a href="/perros/nuevo" class="button is-link is-rounded">Registrar perro</a>

<br><br>

<% if (pinturas.length > 0) { %>
    <div class="columns">
        <% let columns = 0; %>
        <% for (let pinturas of pinturas) { %>
            <% if (columns % 4 == 0) { %>
    </div>
    <div class="columns">
            <% } %>
            <% columns++; %>
            <div class="column">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="<%= pinturas.imagen %>" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="<%= pinturas.imagen %>" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-4"><%= pinturas.autor %></p>
                                <p class="subtitle is-6">@<%= pinturas.nombre %></p>
                            </div>
                        </div>
                    
                        <div class="content">
                            <%= pinturas.descripcion %> <a><%= pinturas.handle %></a>.
                            <a href="#">#css</a> <a href="#">#responsive</a>
                            <br>
                            <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
<% } else { %>
    <h1>No hay pinturass registradas</h1>
<% } %>   

<a href="/perros/nuevo" class="button is-link is-rounded">Registrar perro</a>

<%- include('includes/foot.ejs') %>
