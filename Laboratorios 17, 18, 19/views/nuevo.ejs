<%- include('includes/head.ejs') %>

<h1 class="title">Registrar nueva obra</h1>

<form action="/perros/nuevo" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >

    <label for="nombre">Nombre Pintura:</label>
    <input required name="nombre" id="nombre" class="input is-rounded" type="text" placeholder="café en la terraza">
    <br><br>
    <label for="raza">Colección:</label>
    <div class="select is-primary">
        <select name="raza" id="raza">
            <% for (let raza of razas) { %>
                <option value="<%= raza.id %>"><%= raza.nombre %></option>
            <% } %>
        </select>
    </div>
    <br><br>
    <label for="imagen">Imagen:</label>
    <input name="imagen" id="imagen" class="input is-rounded" type="text" placeholder="ingresa url de tu imagen">
    <br><br>
    <label for="descripcion">Autor:</label>
    <input name="descripcion" id="descripcion" class="input is-rounded" type="text" placeholder="Marco R">
    <br><br>
    <input class="button is-rounded is-success" type="submit" value="Registrar">

</form>

<%- include('includes/foot.ejs') %>
